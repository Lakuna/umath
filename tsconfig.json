{
	"exclude": ["dist", "docs", "node_modules"],
	"compilerOptions": {
		// Type Checking
		"allowUnreachableCode": false,
		"allowUnusedLabels": false,
		"exactOptionalPropertyTypes": true,
		"noFallthroughCasesInSwitch": true,
		"noImplicitAny": true,
		"noImplicitOverride": true,
		"noImplicitReturns": true,
		"noPropertyAccessFromIndexSignature": true,
		"noUncheckedIndexedAccess": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"strict": true,

		// Modules
		"module": "nodenext",
		"rootDir": "src",

		// Emit
		"declarationMap": true,
		"outDir": "dist",
		"sourceMap": true,
		"stripInternal": true, // Remove if switching to [API Extractor](https://api-extractor.com/).

		// JavaScript Support
		// N/A

		// Editor Support
		// N/A

		// Interop Constraints
		"isolatedDeclarations": true,
		"verbatimModuleSyntax": true,

		// Backwards Compatibility
		// N/A

		// Language and Environment
		"target": "esnext",

		// Projects
		"composite": true,

		// Output Formatting
		// N/A

		// Completeness
		"skipLibCheck": true

		// Command Line
		// N/A

		// Watch Options
		// N/A
	}
}
